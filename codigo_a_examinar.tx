        />
      )}

      {editingEquipmentId && (
        <EditEquipmentModal
          equipmentId={editingEquipmentId}
          onClose={() => setEditingEquipmentId(null)}
          onUpdate={handleUpdateSuccess}
        />
      )}
    </div>
  );
};

